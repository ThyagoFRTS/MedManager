<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_medicine_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    android:orientation="horizontal"
    tools:showIn="@layout/fragment_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">
        <!--
        <TextView
            android:id="@+id/txt_icon_medicine_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:text="AS"
            android:textColor="@color/white"
            android:background="@drawable/circle"
            android:gravity="center"
            />
        -->
        <TextView
            android:id="@+id/txt_name_medicine_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/btn_edit_medicine_item"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Namenamenema nema nema" />

        <TextView
            android:id="@+id/txt_quantity_medicine_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_medicine_item"
            android:layout_alignStart="@id/txt_name_medicine_item"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Quantity: 999" />

        <TextView
            android:id="@+id/txt_unity_medicine_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_medicine_item"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/btn_edit_medicine_item"
            android:layout_toEndOf="@+id/txt_quantity_medicine_item"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Unity Price: 999" />



        <ImageButton
            android:id="@+id/btn_edit_medicine_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/onSecondaryDark"
            android:gravity="center"
            android:contentDescription="edit item"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/white" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>